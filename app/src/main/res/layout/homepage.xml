<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/smartlogo">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/smartballlogo"
        />
    </LinearLayout>
    <Button
    android:layout_width="250dp"
    android:layout_height="100dp"
    android:layout_below="@id/smartlogo"
    android:background="@drawable/gamebtn1"
    android:layout_centerInParent="true"
    android:id="@+id/gamestart"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gamestart"
        android:background="@drawable/rulesbtn1"
        android:id="@+id/rules"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_below="@id/rules"
        android:background="@drawable/highscorebtn1"
        android:layout_centerInParent="true"
        android:id="@+id/highscores"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/highscores"
        android:background="@drawable/settingsbtn1"
        android:layout_centerInParent="true"/>
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/highscores"
        android:background="@drawable/sharebtn1"/>
        </RelativeLayout>